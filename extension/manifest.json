{
  "manifest_version": 3,
  "name": "AutoList Canada Cross-Listing Tool",
  "version": "1.0.0",
  "description": "Cross-list your products to multiple Canadian marketplaces with AI-powered tools",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.ebay.ca/*",
    "*://*.amazon.ca/*",
    "*://*.etsy.com/*",
    "*://*.kijiji.ca/*",
    "*://*.facebook.com/marketplace/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ebay.ca/itm/*",
        "*://*.amazon.ca/*/dp/*",
        "*://*.etsy.com/ca/listing/*",
        "*://*.kijiji.ca/v-*/*",
        "*://*.facebook.com/marketplace/item/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
