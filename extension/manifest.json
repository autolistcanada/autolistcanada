{
  "manifest_version": 3,
  "name": "AutoList Canada Cross-Listing Tool",
  "version": "1.0.0",
  "description": "Cross-list your products to multiple Canadian marketplaces with AI-powered tools",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.ebay.ca/*",
    "*://www.etsy.com/*",
    "*://poshmark.ca/*",
    "*://poshmark.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
