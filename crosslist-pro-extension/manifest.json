{
  "manifest_version": 3,
  "name": "AutoList Canada",
  "description": "Clean-room crosslisting with AI helpers and sync \u2014 geometric abstract-nature UI.",
  "version": "1.0.0",
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": { "service_worker": "background.js", "type": "module" },
  "permissions": ["storage", "scripting", "activeTab", "tabs", "alarms"],
  "host_permissions": [
    "*://*.ebay.ca/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*",
    "*://*.ebay.de/*",
    "*://*.ebay.fr/*",
    "*://*.ebay.it/*",
    "*://*.ebay.es/*",
    "*://*.ebay.com.au/*",
    "*://*.etsy.com/*",
    "*://*.poshmark.com/*",
    "*://*.facebook.com/*",
    "*://*.depop.com/*",
    "*://*.grailed.com/*",
    "*://*.kijiji.ca/*",
    "*://*.mercari.com/*",
    "*://*.varagesale.com/*",
    "*://*.shopify.com/*",
    "*://*.offerup.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com/*",
    "*://*.bonanza.com/*",
    "*://*.letgo.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ebay.ca/*",
        "*://*.ebay.com/*",
        "*://*.ebay.co.uk/*",
        "*://*.ebay.de/*",
        "*://*.ebay.fr/*",
        "*://*.ebay.it/*",
        "*://*.ebay.es/*",
        "*://*.ebay.com.au/*"
      ],
      "js": ["content/common.js", "content/ebay.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.etsy.com/*"],
      "js": ["content/common.js", "content/etsy.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.poshmark.com/*"],
      "js": ["content/common.js", "content/poshmark.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content/common.js", "content/facebook.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.depop.com/*"],
      "js": ["content/common.js", "content/depop.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.grailed.com/*"],
      "js": ["content/common.js", "content/grailed.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.kijiji.ca/*"],
      "js": ["content/common.js", "content/kijiji.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.mercari.com/*"],
      "js": ["content/common.js", "content/mercari.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.varagesale.com/*"],
      "js": ["content/common.js", "content/varagesale.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.shopify.com/*"],
      "js": ["content/common.js", "content/shopify.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.offerup.com/*"],
      "js": ["content/common.js", "content/offerup.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.amazon.ca/*", "*://*.amazon.com/*"],
      "js": ["content/common.js", "content/amazon.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.bonanza.com/*"],
      "js": ["content/common.js", "content/bonanza.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.letgo.com/*"],
      "js": ["content/common.js", "content/letgo.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/ui/*.svg", "ui/*.css", "content/content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
