{
  "manifest_version": 3,
  "name": "AutoList Canada Crosslist Pro",
  "version": "1.0",
  "description": "Popup-based crosslisting and inventory sync for Canadian resale marketplaces. Detects listings and enables AI-powered title/description generation, Airtable sync, and crosslistingâ€”all from the extension popup.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ebay.ca/*",
        "https://www.ebay.com/*",
        "https://www.etsy.com/*",
        "https://poshmark.com/*",
        "https://www.mercari.com/*",
        "https://www.facebook.com/*",
        "https://www.grailed.com/*",
        "https://www.depop.com/*",
        "https://*.shopify.com/*",
        "https://www.bonanza.com/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.com/*",
        "https://www.varagesale.com/*",
        "https://www.kijiji.ca/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": [
    "https://www.ebay.ca/*",
    "https://www.ebay.com/*",
    "https://www.etsy.com/*",
    "https://poshmark.com/*",
    "https://www.mercari.com/*",
    "https://www.facebook.com/*",
    "https://www.grailed.com/*",
    "https://www.depop.com/*",
    "https://*.shopify.com/*",
    "https://www.bonanza.com/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com/*",
    "https://www.varagesale.com/*",
    "https://www.kijiji.ca/*"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
